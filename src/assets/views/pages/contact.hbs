<section class="page-title">
    <div class="container">
        <div class="inner align-center">
            <h1 class="title">{{translate.contact.page.title}}</h1>
            <div class="desc">{{translate.contact.page.head_desc}}</div>
        </div>
    </div>
</section><!-- PAGE TITLE -->
<div class="site-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="contact-content">
                    <div class="heading">
                        <h2 class="heading-title">{{translate.contact.page.contact_card.title}}</h2>
                        <div class="heading-desc">{{translate.contact.page.contact_card.description}}.</div>
                    </div>
                    <div class="contact-boxs">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="contact-box">
                                    <a href="tel:1-335-670-6542" title="Call us" class="background-navy">{{translate.contact.phone}}<span>+90 (533) 326 8607</span></a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="contact-box">
                                    <a href="mailto:hello@uxper.co" title="Email us" class="background-dark">{{translate.contact.email}}<span>info@maviarge.com</span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="heading">
                        <h2 class="heading-title">{{translate.contact.address}}</h2>
                        <div class="heading-desc">Antalya Teknokent Ar-Ge 2 Binası Konyaaltı/ANTALYA</div>
                    </div>
                    <iframe
                        src="https://maps.google.com/maps?q=Antalya%20Teknokent%20Ar-Ge%202%20Binas%C4%B1%20Konyaalt%C4%B1/ANTALYA&amp;t=&amp;z=13&amp;ie=UTF8&amp;iwloc=&amp;output=embed"
                        width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="contact-form layout-01">
                    <div class="heading">
                        <h2 class="heading-title">{{translate.contact.page.contact_form.title}}</h2>
                        <div class="heading-desc">{{translate.contact.page.contact_form.description}}</div>
                    </div>
                    <form action="/contact" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="field-input">
                                    <label for="first_name">{{translate.contact.page.contact_form.name}}*</label>
                                    <input type="text" name="name" id="name" value=""
                                        placeholder="{{translate.contact.page.contact_form.name}}" autocomplete="off">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="field-input">
                                    <label for="last_name">{{translate.contact.page.contact_form.surname}}*</label>
                                    <input type="text" name="surname" id="surname" value=""
                                        placeholder="{{translate.contact.page.contact_form.surname}}" autocomplete="off"> 
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="field-input">
                                    <label for="work_email">{{translate.contact.page.contact_form.email}}*</label>
                                    <input type="text" name="email" id="email" value=""
                                        placeholder="{{translate.contact.page.contact_form.email}}" autocomplete="off">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="field-input">
                                    <label for="phone_number">{{translate.contact.page.contact_form.phone}}</label>
                                    <input type="text" name="phone" id="phone" value=""
                                        placeholder="{{translate.contact.page.contact_form.phone}}" autocomplete="off">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="field-input field-textarea">
                                    <label for="message">{{translate.contact.page.contact_form.message}}*</label>
                                    <textarea name="message" id="message" cols="30" rows="10"
                                        placeholder="{{translate.contact.page.contact_form.message}}"></textarea>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="field-submit">
                                    <input type="submit" value="{{translate.button.send}}" name="submit">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div><!-- SITE CONTENT -->