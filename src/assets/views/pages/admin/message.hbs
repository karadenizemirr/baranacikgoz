<section class="page-title">
    <div class="container">
        <div class="inner align-center">
            <h1 class="title">Tüm Mesajlar</h1>
            <div class="desc">İletilen Tüm Mesajlara Buradan Ulaşabilirsiniz.</div>
        </div>
    </div>
</section><!-- PAGE TITLE -->
<div class="site-content">
    <div class="container">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Adı Soyadı</th>
                        <th scope="col">Telefon Nu.</th>
                        <th scope="col">Mail Adresi</th>
                        <th scope="col">Mesajı</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <td>{{this.name}} {{this.surname}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.message}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>